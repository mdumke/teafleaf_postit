<%= render 'shared/content_title', title: "Profile for #{@user.username}" %>

<!-- well -->
<div class="well">

  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
  </dl>

</div><!-- /well -->

<h5><%= @user.username %>'s Activity:</h5>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' unless params[:tab] == 'comments' %>'>
    <%= link_to "Posts (#{@user.posts.size})", @user %>
  </li>

  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

<% if params[:tab] == 'comments' %>

  <%= render partial: 'comments/comment', collection: @user.comments, locals: { show_post: true } %>

<% else %>

  <%= render @user.posts %>

<% end %>
