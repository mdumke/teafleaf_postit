<%= render 'shared/content_title', title: 'Edit this Post' %>

<% if @post.errors.any? %>

  <!-- row -->
  <div class="row">

    <!-- alert -->
    <div class="alert alert-error span8">

      <h5>Please fix the following errors:</h5>

      <ul>

        <% @post.errors.full_messages.each do |msg| %>

          <li><%= msg %></li>

        <% end %>

      </ul>

    </div><!-- /alert -->

  </div><!-- /row -->

<% end %>

<!-- well -->
<div class="well">

  <%= form_for @post do |f| %>

    <!-- control-group -->
    <div class="control-group">

      <%= f.label :title %>
      <%= f.text_field :title %>

    </div><!-- /control-group -->

    <!-- control-group -->
    <div class="control-group">

      <%= f.label :url %>
      <%= f.text_field :url %>

    </div><!-- /control-group -->

    <!-- control-group -->
    <div class="control-group">

      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>

    </div><!-- /control-group -->

    <%= f.submit 'Update Post', class: 'btn btn-primary' %>

  <% end %>

</div><!-- /well -->
