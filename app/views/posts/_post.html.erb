<!-- row -->
<div class="row">

  <!-- well -->
  <div class="span8 well">

    <%= render post.categories %>

    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>posted by</span> <%= link_to post.creator.username, post.creator %>

      <small>
        <%= display_datetime(post.created_at) %>
      </small>
    </p>

    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>

  </div><!-- /well -->

</div><!-- /row -->
