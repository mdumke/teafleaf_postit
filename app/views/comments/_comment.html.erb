<% show_post ||= false %>

<% if comment && comment.creator %>

  <!-- row -->
  <div class="row">

    <!-- well -->
    <div class="well span0 text-center">

      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>

      <br>

      <%= comment.total_votes %>

      <br>

      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>

    </div><!-- /well -->

    <!-- well -->
    <div class="well span8">

      <em><%= comment.body %></em>

      <% if show_post %>
        on <%= link_to comment.post.title, comment.post %>
      <% end %>

      <p>
        <span class='quiet'>by</span> <%= link_to comment.creator.username, comment.creator %>

        <small>
          <%= comment.created_at %>
        </small>
      </p>

    </div><!-- /well -->

  </div><!-- /row -->

<% end %>
